
.container {
}
/*行内元素*/
.wxParse-span, .wxParse-strong, .wxParse-a {
    display: inline;
}
.wxParse-strong {
    font-size: 30rpx;
    color: #ff0000;
}

.wxParse-div .wxParse-p {
    font-size: 22rpx;
    line-height: 1.5;
    color: #ccc;
}
.wxParse-body {
    width: 100%;
    height: 100%;
    /*padding: 20rpx;*/
    box-sizing: border-box;
}
.header {
    width: 100%;
    height: 70rpx;
    padding: 20rpx;
    border-bottom: 1px solid #06b995;
    color: #06b995;
    font-size: 48rpx;
    font-weight: 700;
}
.wxParse-header {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;

}

.wxParse-header image {
    width: 100%;
    height: 70rpx;
}
.wxParse-header .wxParse-h1 {
    font-size: 40rpx;
    line-height: 1.4;
    color: #000;
}
.wxParse-header .wxParse-h2 {
    margin-top: 15rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #ccc;
}
.wxParse-header .wxParse-h2 view {
    display: inline-block;
}
.wxParse-header .wxParse-h2 .wxParse-a {
    color: #06b995;
    margin-right: 30rpx;
}
.wxParse-article {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}
.wxParse-article, .wxParse-article .wxParse-p {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
}
.wxParse-article .wxParse-img image {
    width: 100%;
    height: auto;
}
.wxParse-article video {
    width: 100%;
}
.wxParse-div .wxParse-a {
    font-size: 24rpx;
    color: #15ac39;
}

.wxParse-footer {
    width: 100%;
    margin-top: 40rpx;
}

.wxParse-h3 {
    display: inline-block;
    width: 100%;
    height: 60rpx;
    font-size: 24rpx;
    line-height: 60rpx;
    color: #06b995;
    background-color: #e9e9e9;
}
.wxParse-h3 text {
    padding-left: 20rpx;
}

.extra {
    width: 100%;
    padding-left: 20rpx;
}
.extra .div-3, .div-5 .div-7 {
    font-size: 20rpx;
    color: #ccc;
}

.mvp {
    padding-top: 15rpx;
}
.mvp-des {
    font-size: 28rpx;
    padding-top: 30rpx;
    font-weight: normal;
}

.article-title {
    margin-top: 40rpx;
    font-size: 48rpx;
    line-height: 1.5;
    color: #333;
}
.article-meta--info {
    display: inline-block;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #ccc;
    margin-left: 30rpx;
}
.author {
    color: #06b995;
    margin-left: 0
}
.communications {
    margin-left: 0;
}

/*文章内容*/
.content {
    width: 100%;
}
.content-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
}
.media {
    width: 100%;
    height: auto;
    margin-top: 20rpx;
}

/*预览*/
.swiper-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
}

.swiper-container image {
  width: 100%;
  height: 100%;
}
.footer {
    width: 100%;
}

.footer-text {
    display: block;
    font-size: 24rpx;
    color: #06b995;
}
.footer-text--des {
    display: block;
    font-size: 24rpx;
    color: #ccc;
    margin: 15rpx 0 30rpx 0;
}

.communications-box {
    width: 100%;
}
.good-communications {
    width: 100%;
    height: 40rpx;
    background-color: #ccc;
    font-size: 24rpx;
    line-height: 40rpx;
    color: #333;
}
.good-communications .text {
    padding-left: 10rpx;
}

.communication-item {
    width: 100%;
    margin: 20rpx 0 20rpx 0;
    border-bottom: 1px solid #eee;
}

.item-header {
    width: 100%;
}
.user-avatar {
    display: inline-block;
}
.user-avatar image {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
}
.user-name {
    display: inline-block;
    font-size: 22rpx;
    color: #ccc;
    margin-left: 20rpx;
    margin-top: 0;
}
.user-name text {
    display: block;
}
.user-info .user-nickName {
    color: #06b995;
    font-size: 24rpx;
}
.user-info .post-time {
    margin-top: 10rpx;
}
.approval {
    margin-top: 20rpx;
}
.approval-num {
    display: inline-block;    
    font-size: 24rpx;
    color: #ccc;
    margin-right: 10rpx;
}

.approval-icon {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    background: url('../../images/icons/approvalHL.png') no-repeat center;
    background-size: cover;
}

.communication-cont {
    margin: 20rpx 0;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
}



